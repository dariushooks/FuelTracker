<?xml version="1.0" encoding="utf-8"?>
<MotionScene
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:motion="http://schemas.android.com/apk/res-auto">

    <Transition
        motion:constraintSetStart="@id/favoriteStart"
        motion:constraintSetEnd="@id/favoriteEnd"
        motion:duration="500"
        motion:motionInterpolator="linear">

        <OnClick
            motion:targetId="@+id/favoriteButton"
            motion:clickAction="toggle"/>

        <KeyFrameSet>
            <KeyAttribute
                motion:motionTarget="@+id/favoriteButton"
                motion:framePosition="50"
                android:scaleX="2"
                android:scaleY="2"/>
        </KeyFrameSet>
    </Transition>

    <ConstraintSet
        android:id="@+id/favoriteStart">
        <Constraint
            android:id="@+id/favoriteButton"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginBottom="10dp"
            android:layout_marginEnd="10dp"
            motion:layout_constraintBottom_toBottomOf="parent"
            motion:layout_constraintEnd_toEndOf="parent">
            <CustomAttribute
                motion:attributeName="Crossfade"
                motion:customFloatValue="0"/>
        </Constraint>
    </ConstraintSet>

    <ConstraintSet
        android:id="@+id/favoriteEnd">
        <Constraint
            android:id="@+id/favoriteButton"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginBottom="10dp"
            android:layout_marginEnd="10dp"
            motion:layout_constraintBottom_toBottomOf="parent"
            motion:layout_constraintEnd_toEndOf="parent">
            <CustomAttribute
                motion:attributeName="Crossfade"
                motion:customFloatValue="1"/>
        </Constraint>
    </ConstraintSet>

</MotionScene>