<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="5dp"
    android:background="@drawable/layout_corners">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <LinearLayout
            android:id="@+id/favoriteNameAddress"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:layout_alignParentStart="true"
            android:layout_centerInParent="true"
            android:orientation="vertical">

            <TextView
                android:id="@+id/favoriteName"
                style="@style/FavoriteTextStyle"
                android:text="Station Name"/>

            <TextView
                android:id="@+id/favoriteAddress"
                style="@style/FavoriteTextStyle"
                android:text="Station Address"/>

            <TextView
                android:id="@+id/favoriteCity"
                style="@style/FavoriteTextStyle"
                android:text="Station City"/>

        </LinearLayout>

        <ImageView
            android:id="@+id/favoriteLogo"
            android:layout_width="82dp"
            android:layout_height="82dp"
            android:layout_margin="10dp"
            android:layout_alignParentEnd="true"
            android:layout_centerInParent="true"/>

    </RelativeLayout>



</LinearLayout>